<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#CCCCCC" />

    <TextView
        android:id="@+id/textDeviceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textDevicePosition"
        android:layout_toRightOf="@+id/textDeviceName"
        android:paddingLeft="5dp"
        android:text="(Unreachable)"
        android:textColor="#B2B2B2" />

    <TextView
        android:id="@+id/textDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="29dp"
        android:layout_toRightOf="@+id/imageView1"
        android:paddingTop="8dp"
        android:text="Camera 01"
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textDevicePosition"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_device" />

    <TextView
        android:id="@+id/textDevicePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textDeviceName"
        android:layout_below="@+id/textDeviceName"
        android:paddingBottom="3dp"
        android:paddingTop="5dp"
        android:text="Kitchen" />

</RelativeLayout>